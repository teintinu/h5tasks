{
  "name": "@hoda5/tasks",
  "version": "1.0.5",
  "description": "UI tasks",
  "main": "dist/tasks.js",
  "types": "dist/tasks.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint  -t verbose  --project .",
    "lintfix": "tslint  -t verbose  --project . --fix",
    "pretest": "npm run build",
    "test": "jest",
    "coverage": "sensible-browser coverage/index.html",
    "codecov": "cat coverage/coverage-final.json | npx codecov"
  },
  "author": "josefernandotolentino@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thr0w/h5tasks.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "codecov.io": "^0.1.6",
    "jest": "^22.4.3",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "dependencies": {}
}
